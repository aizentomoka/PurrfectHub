      </form>
    </div>
  </header>

  <nav class="py-1 bg-body-tertiary border-bottom sticky-top">
    <div class="container d-flex flex-wrap justify-content-center ">
      <ul class="nav me-auto">

                  <% if admin_signed_in? %>
                　<!--admin側ログイン後のheaderを返す-->
                      <%= link_to root_path, class: "nav-link link-body-emphasis px-2 active" do %>トップ<% end %>
                      <%= link_to admin_users_path, class: " ml-2" do %>会員一覧<% end %>
