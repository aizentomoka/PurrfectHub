                      <%= link_to root_path, class: " ml-2" do %>トップ<% end %>
                      <%= link_to home_about_path, class: " ml-2" do %>アバウト<% end %>
                      <%= link_to rescued_cats_path, class: " ml-2" do %>里親募集 <% end %>
                      <%= link_to diaries_path, class: " ml-2" do %>みんなの日記 <% end %>
                      <%= link_to user_path(current_user), class: " ml-2" do %>マイページ <i class="fa-solid fa-user"></i><% end %>
