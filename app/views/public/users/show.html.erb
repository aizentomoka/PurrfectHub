<div class="container-fluid mt-2">
          <div class="form-row justify-content-center">
               <div class=" form-group public-session-title text-center">
                 <h3 class="row" >会員情報</h3>
               </div>
          </div>
          <div class = "row justify-content-center">
           <%= image_tag @user.get_profile_image(100, 100), class: " rounded-circle" %>
          </div>
      <h5 class="row mt-1 justify-content-center">    
           <table class="table-borderless mt-3 col-3">
                 
                  <td class="py-2">ニックネーム</td>
                  <td class="py-2"><%= @user.nickname %></td>
                </tr>
                 <tr>
                  <td class="py-2">氏名</td>
                  <td class="py-2"><%= @user.last_name + " " + @user.first_name%></td>
                </tr>
                <tr>
                  <td class="py-2">フリガナ</td>
                  <td class="py-2"><%= @user.last_name_kana + " " + @user.first_name_kana %></td>
                </tr>
                <tr>
                  <td class="py-2">郵便番号</td>
                  <td class="py-2"><%= @user.post_code %></td>
                  <td></td>
                </tr>
                <tr>
                  <td class="py-2">住所</td>
                  <td colspan="2" class="py-2"><%= @user.address %></td>
                </tr>
                <tr>
                  <td class="py-2">電話番号</td>
                  <td class="py-2"><%= @user.telephone_number %></td>
                  <td></td>
                </tr>
                <tr>
                  <td class="py-2">メールアドレス</td>
                  <td class="py-2"><%= @user.email %></td>
                  <td></td>
           </table>
        </h5>
         <div class ="text-center mt-2">
            <% if @user == current_user %>  
              <%= link_to "編集する",edit_user_path(@user), class: "btn btn-success" %>
            <% end %>
        </div>
        <%= link_to "Back", request.referrer, class: "row d-flex justify-content-center" %>
 </div>
