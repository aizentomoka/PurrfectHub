<div class= container>  
          <div class="form-row justify-content-center">
               <div class="col-2 form-group public-session-title text-center">
                 <h3 class=" mt-2" style="background-color:#faf0e6;">マイページ</h3>
               </div>
          </div>
              
  <div class="row col-6 mt-1 mx-auto">
          
        
        
        
             
              <table class="table table-bordered">
                
                  <%= image_tag @user.get_profile_image(100,100) %>
                 <tr>
                  <th>ニックネーム</th>
                  <td><%= @user.nickname%></td>
                </tr>  
                <tr>
                  <th>氏名</th>
                  <td><%= @user.last_name %><%= @user.first_name %></td>
                </tr>
                <tr>
                  <th>カナ</th>
                  <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
                </tr>
                <tr>
                  <th>郵便番号</th>
                  <td><%= @user.post_code %></td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td><%= @user.address %></td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td><%= @user.telephone_number %></td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= @user.email %></td>
                </tr>
                </table>
           
                <div class="col-4 ">
                <% unless @user.guest_user? %>
                    <h4>登録情報   <%= link_to "編集する", edit_user_path(current_user), class: "btn btn-sm btn-info" %></h4>
                <% else %>
                    <h4></h4>
                <% end %>
                </div> 
                
                
     </div>            
  </div>       