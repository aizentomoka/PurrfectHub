<div class="container-fluid mt-2">
   <!--<div class="row mt-3 mx-auto">-->
    
          <div class="form-row justify-content-center">
               <div class="col-2 form-group public-session-title text-center">
                 <h3 class=" mt-2" style="background-color:#faf0e6;">マイページ</h3>
               </div>
          </div>
      <div class="row mt-1 justify-content-center">    
          <%= form_with model:@user, local:true do |f| %>
            
            
            
           <table class="table-borderless mt-5">
                 <tr>
                  <td class="py-2">ニックネーム</td>
                  <td class="py-2"><%= f.text_field :nickname %></td>
                </tr>
                 <tr>
                  <td class="py-2">氏名</td>
                  <td class="py-2"><%= f.text_field :last_name %></td>
                  <td class="py-2"><%= f.text_field :first_name %></td>
                </tr>
                <tr>
                  <td class="py-2">フリガナ</td>
                  <td class="py-2"><%= f.text_field :last_name_kana %></td>
                  <td class="py-2"><%= f.text_field :first_name_kana %></td>
                </tr>
                <tr>
                  <td class="py-2">郵便番号</td>
                  <td class="py-2"><%= f.text_field :post_code %></td>
                  <td></td>
                </tr>
                <tr>
                  <td class="py-2">住所</td>
                  <td colspan="2" class="py-2"><%= f.text_field :address, style: 'width: 500px;' %></td>
                </tr>
                <tr>
                  <td class="py-2">電話番号</td>
                  <td class="py-2"><%= f.text_field :telephone_number %></td>
                  <td></td>
                </tr>
                <tr>
                  <td class="py-2">メールアドレス</td>
                  <td class="py-2"><%= f.text_field :email %></td>
                  <td></td>
                </tr>
               
               
               
                <tr>
                  <td class="py-2"><%= f.submit "編集内容を保存", class: "btn btn-info" %></td>
                  <td></td>
                  
                  <td class="py-2"><%= link_to "退会する", users_confirm_withdraw_path, class: "btn btn-danger" %></td>
                </tr>
             
           </table>
           
     
      
          <% end %>
        </div>
 </div>
