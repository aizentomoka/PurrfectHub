   <h1><%= @user.nickname %>のMy Page</h1>
  <%= link_to follows_user_path(@user) do %>
     <h6>フォロー数<%= @user.followers.count %></h6>
  <% end %> 

  <%= link_to followers_user_path(@user) do %>
    <h6>フォロワー数<%= @user.followeds.count %></h6>
  <% end %>
  
  <% if current_user != @user %>
    <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", user_relationships_path(@user), method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(@user), method: :post, class:"btn btn-success" %>
    <% end %>
  <% end %>
  
  <% if current_user != @user && current_user.following?(@user) && @user.following?(current_user) %>
    <%= link_to 'chatを始める', chat_path(@user), class: "ml-3" %>
  <% end %>
  
  
   <%= link_to "日記一覧", diaries_user_path(@user), class: "btn btn-danger" %>
