     <%= link_to "ブックマーク一覧", bookmarks_user_path(@user), class: "btn btn-danger" %>
      <%= link_to "いいね一覧", favorites_user_path(@user),  class: "btn btn-danger" %>
       <%= link_to "日記を書く", new_diary_path, class: "btn btn-danger" %>
        <%= link_to "里親を募集", new_rescued_cat_path, class: "btn btn-danger" %>
         <%= link_to "会員詳細へ", user_path(@user), class: "btn btn-danger" %>