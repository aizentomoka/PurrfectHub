<div class="container">
  <h1 class="text-center">My Cat 編集</h1>
  <div class="d-flex justify-content-center align-items-center">
    <%= image_tag @cat.get_image, size: "200x200", class: "rounded-circle" %>
  </div>
  <%= form_with model: @cat, html: { class: 'text-center' } do |f| %>
    <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*", class: 'form-control' %>
    
    <h4>name</h4>
    <%= f.text_field :name, class: 'form-control' %>

    <h4>性別</h4>
    <%= f.text_field :sex, class: 'form-control' %>

    <h4>誕生日</h4>
    <%= f.date_select(
          :birthday,
          use_month_numbers: true,
          start_year: 1990,
          end_year: (Time.now.year),
          default: Date.new(1990, 1, 1),
          date_separator: '/',
          class: 'form-control') %>
          
   <p><%= f.submit '登録', class: 'btn btn-success mt-3' %></p>
  <% end %>
</div>