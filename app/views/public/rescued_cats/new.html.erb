<div class="container mt-5">
  <h1 class="text-center">里親募集　新規投稿</h1>

  <%= form_with model: @rescued_cat, multipart: true, class: "mt-4" do |f| %>
    <div class="form-group">
      <h4>画像（複数投稿できます）</h4>
      <%= f.file_field :images, multiple: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>タグ(“/”で複数個登録できます)</h4>
      <%= f.text_field :label_name, autofocus: true, placeholder: "三毛猫/保護猫", class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>タイトル</h4>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>本文</h4>
      <%= f.text_area :body, class: "form-control", rows: 15, cols: 50 %>
    </div>

    <div class="form-group">
      <h4>名前</h4>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>年齢</h4>
      <%= f.text_field :age, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>性別</h4>
      <%= f.text_field :sex, autofocus: true, placeholder: "オスorメス", class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>ワクチン</h4>
      <%= f.text_area :vaccine, autofocus: true, placeholder: "接種済みワクチンまたは未接種と記入してください。", class: "form-control", rows: 4, cols: 50 %>
    </div>

    <div class="form-group">
      <h4>去勢/避妊手術</h4>
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_castration, "true", class: "form-check-input" %>
        <%= f.label :is_castration_true, "去勢済み", class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_castration, "false", class: "form-check-input" %>
        <%= f.label :is_castration_false, "未去勢", class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= f.submit '投稿', class: "btn btn-success" %>
    </div>
  <% end %>
</div>