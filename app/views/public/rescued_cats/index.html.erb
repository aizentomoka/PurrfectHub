<div class="container mt-5">
  <h1 class="text-center">里親募集一覧</h1>

  <!-- キーワード検索フォーム -->
  <%= form_with url: search_rescued_cats_path, local: true, method: :get, class: "mb-3" do |f| %>
      <div class="input-group">
        <%= f.text_field :keyword, class: "form-control", placeholder: "キーワード検索" %>
        <div class="input-group-append">
          <%= f.button :submit, class: "btn btn-outline-secondary", type: "submit" do %>
            <i class="fas fa-search"></i>
          <% end %>
        </div>
      </div>
   <% end %>

  <!-- タグ検索フォーム -->
  <%= form_with url: label_search_rescued_cats_path, local: true, method: :get, class: "mb-3" do |f| %>
    <div class="input-group">
      <%= f.text_field :name, class: "form-control", placeholder: "タグ検索" %>
      <div class="input-group-append">
        <%= f.button :submit, class: "btn btn-outline-secondary", type: "submit" do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <% @rescued_cats.each do |rescued_cat| %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <div class="card-header text-center">
            <%= link_to rescued_cat_path(rescued_cat.id) do %>
              <p class="card-title"><%= rescued_cat.title %></p>
            <% end %>
          </div>

          <% if rescued_cat.images.attached? %>
            <%= link_to rescued_cat_path(rescued_cat.id) do %>
              <%= image_tag rescued_cat.images.first, class: "card-img-top", alt: "Cat Image", size: "100x200" %>
            <% end %>
          <% end %>

          <div class="card-body">
            <p><%= render 'public/rescued_cats/label', rescued_cat: rescued_cat %></p>
            <% if rescued_cat.name.present? %>
              <p>名前：<%= rescued_cat.name %></p>
            <% else %>
              <p>名前：</p>
            <% end %>
            <p>性別：<%= rescued_cat.sex %></p>
            <p>コメント件数：<%= rescued_cat.rescued_cat_comments.count %></p>
            <p><%= render 'public/rescued_cats/bookmark', rescued_cat: rescued_cat, current_user: current_user %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

   <div class="row justify-content-center ">
    <div class="col-4 ">
      <%= paginate @rescued_cats %>
    </div>
  </div>

</div>