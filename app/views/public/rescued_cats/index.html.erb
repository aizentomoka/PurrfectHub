<h1>里親募集一覧</h1>
<%= form_with url: search_rescued_cats_path, local: true, method: :get do |f| %>
    <%= f.text_field :keyword %>
    <%= f.submit "検索" %>
<% end %>

<% @rescued_cats.each do |rescued_cat| %>

  
   <%= image_tag rescued_cat.user.get_profile_image(100,100) %>
   <%= link_to my_page_user_path(rescued_cat.user) do %>
     <p><%= rescued_cat.user.nickname %></p>
   <% end %>
  
   <% if rescued_cat.images.attached? %>
     <%= image_tag rescued_cat.images.first, size: "200x200" %>
   <% end %>

   <p><%= render 'public/rescued_cats/label', rescued_cat: rescued_cat %></p>

   <%= link_to rescued_cat_path(rescued_cat.id) do %>
    <p><%= rescued_cat.title %></p>
   <% end %>
   
   <% if rescued_cat.name %>
     <p>名前：<%= rescued_cat.name %></p>
   <% else %>
     <p>名前：</p>
   <% end %>
   <p>性別：<%= rescued_cat.sex %></p>
    
   <% if rescued_cat.age %>
   <p>年齢：<%= rescued_cat.age %> 才</p>
 　<% else %>
   <p>年齢：不明</p>
   <% end %>
   <p>ワクチン</p>
   <%= rescued_cat.vaccine %>
   <p>去勢/避妊手術</p>
    <% if rescued_cat.is_castration %>
      <p>手術済</p>
    <% else %>
      <p>未手術</p>
    <% end %>
    
    <p>譲渡先</p>
    <% if rescued_cat.is_completion %>
      <p>譲渡先決定！</p>
    <% else %>
      <p>募集中</p>
    <% end %>
    
   
    <p>コメント件数：<%= rescued_cat.rescued_cat_comments.count %></p>
    <p><%= render 'public/rescued_cats/bookmark', rescued_cat: rescued_cat, current_user: current_user %></p>

<% end %>
