<%= render 'layouts/errors', obj: @diary %>
<div class="container mt-5">
  <h1 class="text-center">日記　編集</h1>

  <%= form_with model: @diary, multipart: true, class: "mt-4" do |f| %>
    <div class="form-group">
      <h4>猫ちゃん</h4>
       <%= f.collection_select :cat_id, @cats, :id, :name, prompt: '選択してください', class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>画像（複数投稿できます）</h4>
      <%= f.file_field :images, multiple: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>タグ(“/”で複数個登録できます)</h4>
      <%= f.text_field :name, value: @diary.tags.pluck(:name).join('/') , class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>タイトル</h4>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <h4>本文</h4>
      <%= f.text_area :body, class: "form-control", rows: 15, cols: 50 %>
    </div>

    <div class="form-group">
      <h4>体重</h4>
      <%= f.text_field :weight, autofocus: true, class: "form-control" %>
    </div>

    
    <div class="form-group text-center">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
  <% end %>
</div>