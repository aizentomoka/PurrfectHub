<div class="container mt-5">
  <h1 class="text-center ">里親募集一覧</h1>
    <h3 class = "text-right mb-3">
      <%= link_to "コメント一覧へ", admin_rescued_cat_rescued_cat_comments_path(:rescued_cat_id), class: "btn btn-sm btn-info" %>
    </h3>
    
    <div class="row">
      <% @rescued_cats.each do |rescued_cat| %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <div class="card-header text-center">
              <%= link_to rescued_cat_path(rescued_cat.id) do %>
                <p class="card-title"><%= rescued_cat.title %></p>
              <% end %>
            </div>
  
            <% if rescued_cat.images.attached? %>
              <%= link_to rescued_cat_path(rescued_cat.id) do %>
                <%= image_tag rescued_cat.images.first, class: "card-img-top", alt: "Cat Image", size: "100x200" %>
              <% end %>
            <% end %>
  
            <div class="card-body">
              <p><%= image_tag rescued_cat.user.get_profile_image(50,50), class: "mr-3 rounded-circle" %>
                <%= link_to admin_user_path(rescued_cat.user.id) do %>
                  <%= rescued_cat.user.nickname %>
                 <% end %>
              </p>
               <small><%= truncate(rescued_cat.body, :length => 30) %></small>
              <p class = "justify-content-end">
               <%= link_to "削除", admin_rescued_cat_path(rescued_cat), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>
  
     <div class="row justify-content-center ">
      <div class="col-4 ">
        <%= paginate @rescued_cats %>
      </div>
    </div>

</div>
 


