<div class="container" style="margin-bottom: 50px;">
       <h1 class="text-center">会員一覧</h1>
 
  <div class="row mt-3 mx-auto">
  <div class="col mx-auto">
 
     <table class='table table-inverse'>
              <thead class="table table-active">
                <tr>
                  <th></th>
                  <th>会員ID</th>
                  <th>ニックネーム</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
                  <th colspan="3"></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
             
                 <% @users.each do |user| %>
                      <tr>
                        <td> <%= image_tag user.get_profile_image(100,100), class: "mr-3 rounded-circle"  %></td> 
                        <td><%= user.id %></td>
                        <td>
                            <%= link_to user.nickname, admin_user_path(user) %> 
                        </td>
                        <td><%= user.email %></td>
                        <td>
                            <% if user.is_active %>
                              <span class="text-success">有効</span>
                            <% else %>
                              <span class="text-secondary">退会</span>
                            <% end %>
                        </td>
                        
                      </tr>
                 <% end %>
                    
              </tbody>     
      </table>
      
      
      
      </div>
   </div>
   <div class="row justify-content-center">
      <div class="col-4">
        <%= paginate @users %>
      </div>
    </div>
</div>

        
        