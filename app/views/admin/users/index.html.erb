<div class="container" style="margin-bottom: 50px;">
       <div class="row">
         <div class="col-2 text-center mt-5 mb-3" style="font-family: 'Playfair Display', serif; background-color:#faf0e6;">
              <h4>会員一覧</h4>
         </div>
        </div> 
 
  <div class="row mt-3 mx-auto">
  <div class="col mx-auto">
 
     <table class='table table-inverse'>
              <thead class="table table-active">
                <tr>
                  <th></th>
                  <th>会員ID</th>
                  <th>ニックネーム</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
                  <th colspan="3"></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
             
                 <% @users.each do |user| %>
                      <tr>
                        <td> <%= image_tag user.get_profile_image(100,100) %></td> 
                        <td><%= user.id %></td>
                        <td>
                            <%= link_to user.nickname, admin_user_path(user) %> 
                        </td>
                        <td><%= user.email %></td>
                        <td>
                            <% if user.is_active %>
                              <span class="text-success">有効</span>
                            <% else %>
                              <span class="text-secondary">退会</span>
                            <% end %>
                        </td>
                        
                      </tr>
                 <% end %>
                    
              </tbody>     
      </table>
      
      
      
      </div>
   </div>
   <div class = "row justify-content-center" >
    
</div>
        
        
        